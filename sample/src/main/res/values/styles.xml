<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sample_primary</item>
        <item name="colorPrimaryDark">@color/sample_primary</item>
        <item name="colorAccent">@color/sample_accent</item>
    </style>

    <style name="DayTextAppearance"
           parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/gbday</item>
    </style>

    <style name="MonthTextAppearance"
           parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#0097a9</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="DayOfWeekTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
